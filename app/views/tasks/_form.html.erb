<%= simple_form_for(@task,validate:true, local: true,html:{class:'form-inline'}) do |form| %>

<%=form.error_notification%>
 <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   
  <div class="field">
    <%= collection_select(:task, :notassignment_id, Notassignment.all, :id, :name, {prompt: "Choose Type of material"}) %>
  </div>
  
  
  <div class="field">
    <%= form.label :unit_code %>
    <%= form.text_field :unit_code %>
  </div>

  <div class="field">
    <%= form.label :unit_name %>
    <%= form.text_field :unit_name %>
  </div>

    
  <div class="field">
    <%= form.label :semester %>
    <%= form.number_field :semester %>
  </div>

  <div class="field">
    <%= form.label :additional_information %>
    <%= form.text_area :additional_information,placeholder:"Please specify material i.e notes or assignments,font to use etc" %>
  </div>

  <div class="field">
    <%= form.label :Attachments %>
    <%= form.file_field :attaches,multiple: true,direct_upload: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
